<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/light_warden" />

        <TextView
            android:id="@+id/name_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_card"
            android:layout_centerHorizontal="true"
            android:text="Lyra the Sun Shard"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_card"
            android:layout_centerHorizontal="true"
            android:text="Classic"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_card"
            android:layout_centerHorizontal="true"
            android:text="Classic"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/attack_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_card"
            android:layout_centerHorizontal="true"
            android:text="Classic"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>